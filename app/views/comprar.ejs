<%- include('./partials/header.ejs') %>
<link rel="stylesheet" type="text/css" href="./css/comprar.css">
<body id="fundo">
    <%- include('./partials/navbar.ejs') %>

    <div class="card border-light mb-3" id="card">
        <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label>Buscar por catergorias</label>
                </div>
                <div class="form-group">
                <label>Qual tipo </label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Apartamento</option>
                    <option>Kitnet</option>
                    <option>Casa</option>
                    <option>Chácara</option>
                    <option>Flat</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Local</label>
                <input type="text" class="form-control" id="senhacadastro" placeholder="Bairro/cidade/Estado">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputIptu">Preço</label>
                        <div class="input-group mb-1">
                            <input type="text" class="form-control" aria-label="Quantia" placeholder="Min">
                            <div class="input-group-append">
                            <span class="input-group-text">,00</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6" id="btn1">
                        <label for="inputIptu"></label>
                        <div class="input-group mb-1">
                            <input type="text" class="form-control" aria-label="Quantia" placeholder="Max">
                            <div class="input-group-append">
                            <span class="input-group-text">,00</span>
                            </div>
                        </div>
                    </div>
                </div>   
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputIptu">Área (m²)</label>
                        <input type="text" class="form-control" id="" placeholder="Min">
                    </div>
                    <div class="form-group col-md-6" id="btn1">
                        <label for="inputIptu"></label>
                        <input type="text" class="form-control" id="" placeholder="Max">
                    </div>
                </div>   
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputIptu">Quartos</label>
                        <input type="text" class="form-control" id="" placeholder="Min">
                    </div>
                    <div class="form-group col-md-6" id="btn1">
                        <label for="inputIptu"></label>
                        <input type="text" class="form-control" id="" placeholder="Max">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputIptu">Banheiros</label>
                        <input type="text" class="form-control" id="" placeholder="Min">
                    </div>
                    <div class="form-group col-md-6" id="btn1">
                        <label for="inputIptu"></label>
                        <input type="text" class="form-control" id="" placeholder="Max">
                    </div>
                </div> 
                <div class="form-group">
                    <label>Vagas</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    </select>
                </div>     
                <button type="submit" class="btn btn-dark btn-block">Buscar</button>
            </form>

        </div>
    </div>

    <div class="card-deck border-0 " id="card2">
        <div class="form-row">
            <div class="form-group col-md-5">
                <label>Ordenar por:  </label>
            
            </div>
            <div class="form-group col-md-7">
                <select class="form-control" id="ordenar">
                    <option>Menor Preço</option>
                    <option>Maior Preço</option>
                    <option>Mais Recente</option>
                    </select>
            </div>
        </div>   
    </div>
    
    <div class="card border-0 mb-3" id="cardTitu">
        <div class="form-title form-title" id="titulo"><h2 class="form-title__text"> Imóveis à venda</h2></div>
    </div>

    
    <div class="card-group border-0" style="width: 60%;" id="caranun">

        <% itens.forEach(element => { %>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <img class="card-img" src="<%= element.fotoURL%>">
                </div>
                <div class="form-group col-md-5" id="Descri">
                    <h3 class="card-title">R$ <%= element.valor%></h3>
                    <p class="card-text"> <%= element.endereco %>,  <%= element.bairro%>, <%= element.cidade%>,  <%= element.estadoUF%></p>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <span class="fas fa-th"></span>
                            <span class="card-text"> <%= element.arem2%> m²</span>
                        </div>
                        <div class="form-group col-md-2">
                            <span class="fas fa-bed"></span>
                            <span class="card-text"> <%= element.quartos%></span>
                        </div>
                        <div class="form-group col-md-2">
                            <span class="fas fa-car"></span>
                            <span class="card-text"> <%= element.vagas%></span>
                        </div>
                        <div class="form-group col-md-4">
                            <span class="fas fa-shower"></span>
                            <span class="card-text"> <%= element.banheiros%></span>
                        </div>
                    </div>   
                    <form action="/anuncio-ver/<%= element.id %>" method="GET">
                        <button id="btn2" type="submit">Ver Anúncio</button> 
                    </form>
                </div>
            </div> 
        <% }); %>
 
    </div>
    
</body>
<%- include('./partials/footer.ejs') %>